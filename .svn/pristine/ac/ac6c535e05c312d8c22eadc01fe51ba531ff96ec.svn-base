<?xml version="1.0" encoding="UTF-8"?>
<ui xmlns="http://uiprogram.mezzanine.com/View" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://uiprogram.mezzanine.com/View ../../xsd/View.xsd">
    <view label="patternTypeList.title" unit="PatternTypeList" init="init">
    
        <!--<menuitem label="learningManager.patternTypeList.menu" icon="Users" order="112">
            <userRole>LearningManager</userRole>
        </menuitem>-->
        
        <navigation outcome="back" target="SystemOverview" />
        <action label="back" outcome="back"/>
        
       <textfield label="patternType.patternTypeID">
            <binding variable="patternType">
                <attribute name="patternTypeID"/>
            </binding>
        </textfield>
        
		<checkbox label="patternType.MO_Multiple">
			<binding variable="uPTFillter">
				<attribute name="MOMultiple"/>
			</binding>
		</checkbox>
		<checkbox label="patternType.Multiple_Choice_Range">
			<binding variable="uPTFillter">
				<attribute name="RespValMCR"/>
			</binding>
		</checkbox>
		<checkbox label="patternType.Against_Message_Order">
			<binding variable="uPTFillter">
				<attribute name="RespValQO"/>
			</binding>
		</checkbox>
		<checkbox label="patternType.Against_Stored_Value">
			<binding variable="uPTFillter">
				<attribute name="RespValASV"/>
			</binding>
		</checkbox>
		
		<checkbox label="patternType.redo">
			<binding variable="uPTFillter">
				<attribute name="infoRedo"/>
			</binding>
		</checkbox>
		<checkbox label="patternType.informNext">
			<binding variable="uPTFillter">
				<attribute name="informNext"/>
			</binding>
		</checkbox>
		<checkbox label="patternType.StopPatternOnCorrect">
			<binding variable="uPTFillter">
				<attribute name="StopPatternOnCorrect"/>
			</binding>
		</checkbox>   
		<checkbox label="patternType.randomPattern">
			<binding variable="uPTFillter">
				<attribute name="RandomPattern"/>
			</binding>
		</checkbox>        
		          		
        <submit label="submit" action="savePatternType"/>

        <table title="patternTypeList.list.title">
            <collectionSource function="getPatternTypes"/>
            
            <!-- <column heading="pattern.patternID">
                <attributeName>patternType_Pattern.patternID</attributeName>
            </column>-->
            
            <column heading="patternType.patternTypeID">
                <attributeName>patternTypeID</attributeName>
            </column>
            
            <column heading="patternType.MO_Multiple">
                <attributeName>MOMultiple</attributeName>
            </column>
              <column heading="patternType.Multiple_Choice_Range">
                <attributeName>RespValMCR</attributeName>
            </column>
              <column heading="patternType.Against_Message_Order">
                <attributeName>RespValQO</attributeName>
            </column>
            <column heading="patternType.Against_Stored_Value">
                <attributeName>RespValASV</attributeName>
            </column>
 			<column heading="patternType.redo">
                <attributeName>infoRedo</attributeName>
            </column>
             <column heading="patternType.informNext">
                <attributeName>informNext</attributeName>
            </column>
            <column heading="patternType.StopPatternOnCorrect">
                <attributeName>StopPatternOnCorrect</attributeName>
            </column>
             <column heading="patternType.randomPattern">
                <attributeName>RandomPattern</attributeName>
            </column>
            <rowAction label="edit" action="patternTypeEdit">
                <binding variable="patternType"/>
            </rowAction>

            <rowAction label="delete" action="patternTypeRemove">
                <binding variable="deletePatternType"/>
            </rowAction>
        </table>
    </view>
</ui>