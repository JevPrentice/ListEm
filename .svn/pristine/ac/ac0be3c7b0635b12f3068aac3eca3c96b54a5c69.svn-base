<?xml version="1.0" encoding="UTF-8"?>
<ui xmlns="http://uiprogram.mezzanine.com/View" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://uiprogram.mezzanine.com/View ../views/xsd/View.xsd">

    <view label="ProgramManagers.menu" unit="RoleManagement">

	    <menuitem label="ProgramManagers" icon="SystemSettings" order="2">
	        <userRole>Admin</userRole>
	    </menuitem>

        <navigation outcome="invite"    target="InviteProgramManager"/>
        <navigation outcome="edit"      target="EditProgramManager"/>
        <action label="invite.programManager" action="initInvitePM"/>

        <table>
            <collectionSource function="getPM"/>
       
            <column heading="firstNames">
                <attributeName>firstNames</attributeName>
            </column> 
                      
            <column heading="surname">
                <attributeName>surname</attributeName>
            </column> 
                      
            <column heading="mobileNumber">
                <attributeName>mobileNumber</attributeName>
            </column> 
                
            <rowAction label="edit" action="edit">
                <binding variable="pm"/>
            </rowAction>
                
            <rowAction label="remove" action="uninvitePM">
                <binding variable="pm"/>
                <confirm subject="confirm.uninvitePM" body="confirm.uninviteBody"/>
            </rowAction>
        </table>
    </view>
</ui>
