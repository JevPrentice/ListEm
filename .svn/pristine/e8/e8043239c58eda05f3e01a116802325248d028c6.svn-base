<?xml version="1.0" encoding="UTF-8"?>
<ui xmlns="http://uiprogram.mezzanine.com/View" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://uiprogram.mezzanine.com/View ../views/xsd/View.xsd">

    <view label="invite.admin" unit="RoleManagement" init="initInviteAdmin">

        <navigation outcome="goBack"    target="ManageAdmins"/>
        <navigation outcome="error"    target="InviteAdmin"/>

        <action label="back" outcome="goBack"/>

        <textfield label="firstNames">
            <binding variable="a">
                <attribute name="firstNames"/>
            </binding>
        </textfield>

        <textfield label="surname">
            <binding variable="a">
                <attribute name="surname"/>
            </binding>
        </textfield>

        <textfield label="mobileNumber">
            <binding variable="a">
                <attribute name="mobileNumber"/>
            </binding>
        </textfield>

        <checkbox label="invite.inviteProgramManager">
            <binding variable="bInviteProgramManager" />
        </checkbox>

        <checkbox label="invite.inviteUser">
            <binding variable="bInviteClient" />
        </checkbox>

       <select label="invite.userType">
            <binding variable="clientType" />
            <enum>CLIENTTYPE</enum>
        </select>

        <submit label="invite" action="inviteAdmin"/>

    </view>
</ui>





