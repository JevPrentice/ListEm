unit ViewControllers;

vSummaryGroupTopicDisplay[] getSummaryGroupTopicDisplay() {
  	return vSummaryGroupTopicDisplay:all();
}

vSummaryGroupTopicDisplay[] getSummaryGroupTopicDisplayForTopics(Umbrella[] topics){
	
	vSummaryGroupTopicDisplay[] returnArr;

	vSummaryGroupTopicDisplay[] allResults = getSummaryGroupTopicDisplay();

	for (int i = 0; i < allResults.length(); i++){
		vSummaryGroupTopicDisplay r = allResults.get(i);

		for (int j = 0; j < topics.length(); j++){
			Umbrella t = topics.get(j);

			if (r.topicid == t.umbrellaID){
				returnArr.append(r);
			}
		}
	}

	return returnArr;

}

