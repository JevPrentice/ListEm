<?xml version="1.0" encoding="UTF-8"?>
<ui xmlns="http://uiprogram.mezzanine.com/View" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://uiprogram.mezzanine.com/View ../../xsd/View.xsd">
    <view init="init" label="activity_ivr_details.title" unit="ActivityEditIvrDetails">

        <navigation outcome="nav_activity_order_management" target="ActivityOrderManagement"/>
        <navigation outcome="nav_activity_management" target="ActivityManagement"/>
        <navigation outcome="nav_content_viewer" target="ContentViewer"/>
        <navigation outcome="nav_activity_edit" target="ActivityEdit"/>
        <navigation outcome="nav_activity_order_edit" target="ActivityOrderEdit"/>

        <info label="activity">
            <binding variable="activity">
                <attribute name="patternID" />
            </binding>
        </info>
        
       <textfield label="activity.activityIVRstring">
            <binding variable="ivrString"></binding>
        </textfield>

       <textfield label="activity.activityIVRLength_seconds">
            <binding variable="ivr_length_sec">
            </binding>
        </textfield>

        <submit label="save" action="saveActivityButton"/>
        <submit label="activity_ivr_details.save_activity_nav_activity_order" action="saveActivityNavActivityOrderEditButton"/>

    </view>
</ui>