unit EmailService;

string emailAddress;
string emailDescription;
string emailSubject;
string emailBody;

void sendEmail(string emailAddressIn, string emailDescriptionIn, string emailSubjectIn, string emailBodyIn){

	emailAddress = emailAddressIn;
	emailDescription = emailDescriptionIn;
	emailSubject = emailSubjectIn;
	emailBody = emailBodyIn;

	Mez:email(emailAddress, "email.descriptionKey", "email.subjectKey", "email.bodyKey");

	string msg = String:concat("An email has been sent to: ", emailAddress);
	Alerter:alert(msg);
	Logger:log(msg);
	
}