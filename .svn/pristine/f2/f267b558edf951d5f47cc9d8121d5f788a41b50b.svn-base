<?xml version="1.0" encoding="UTF-8"?>
<ui xmlns="http://uiprogram.mezzanine.com/View" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://uiprogram.mezzanine.com/View ../../xsd/View.xsd">
    <view label="patternTypeController.title" unit="PatternTypeTableController" init="init">
        
        <navigation outcome="back" target="SystemOverview" />
        <action label="back" outcome="back"/>
        
        <select label="patternType.selectPattern">
            <binding variable="pattern"/>
            <collectionSource function="PatternList:fGetSMSPatterns">
                <displayAttribute name="patternID"/>
            </collectionSource>
        </select>
        
       <select label="patternType.patternTypeID">
            <binding variable="patternType"/>
           <collectionSource function="PatternTypeList:getPatternTypes">
                <displayAttribute name="patternTypeID"/>
            </collectionSource>
        </select>

        <textfield label="patternType.randomPatternMax">
            <binding variable="patternTypeTable">
                <attribute name="randomPatternMax"/>
            </binding>
        </textfield>

        <submit label="submit" action="savePatternTypeTable"/>

        <table title="patternTypeList.list.title">
            <collectionSource function="getPatternTypeTables"/>
            
           <column heading="activity.activityID">
                <attributeName>patternTypeTable_Pattern.patternID</attributeName>
            </column>
            
            <column heading="patternType.patternTypeID">
                <attributeName>patternTypeTable_PatternType.patternTypeID</attributeName>
            </column>
            <column heading="patternType.randomPatternMax">
                <attributeName>randomPatternMax</attributeName>
            </column>
            <rowAction label="edit" action="patternTypeTableEdit">
                <binding variable="patternTypeTable"/>
            </rowAction>

            <rowAction label="delete" action="patternTypeTableRemove">
                <binding variable="deletePatternTypeTable"/>
                <confirm subject="patternTypeController.table.delete.confirm.subject" body="patternTypeController.table.delete.confirm.body"/>
            </rowAction>
        </table>
    </view>
</ui>