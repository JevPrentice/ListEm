<?xml version="1.0" encoding="UTF-8"?>
<ui xmlns="http://uiprogram.mezzanine.com/View" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://uiprogram.mezzanine.com/View ../../xsd/View.xsd">
    <view label="learningManager.patternOrderList.title" unit="PatternOrderList" init="init">
    
        <!--<menuitem label="learningManager.patternOrderList.menu" icon="Users" order="34">
            <userRole>LearningManager</userRole>
        </menuitem>-->
        
        <navigation outcome="back" target="SystemOverview" />
        <action label="back" outcome="back"/>
        
        <select label="sequence.sequenceID">
			<binding variable="sequence"/>
			<collectionSource function="SequenceList:getAllSequences">
				<displayAttribute name="sequenceID"/>
			</collectionSource>
		</select>
		
		<select label="patternType.selectPattern">
			<binding variable="pattern"/>
			<collectionSource function="PatternList:getPatterns">
				<displayAttribute name="patternID"/>
			</collectionSource>
		</select>
       
		<textfield label="activityOrder">
            <binding variable="patternOrder">
                <attribute name="patternOrder"/>
            </binding>
        </textfield>
		
		<submit label="submit" action="savePatternOrder"/>

        <table title="learningManager.patternOrderList.list">
            <collectionSource function="getAllPatternOrders"/>
            <column heading="sequence.sequenceID">
                <attributeName>sequence_patternOrder.sequenceID</attributeName>
            </column>
            <column heading="activity.activityID">
                <attributeName>pattern_patternOrder.patternID</attributeName>
            </column>
            <column heading="activityOrder">
                <attributeName>patternOrder</attributeName>
            </column>
            <rowAction label="learningManager.patternOrderList.list.edit" action="editPatternOrder">
                <binding variable="patternOrder"/>
            </rowAction>

            <rowAction label="learningManager.patternOrderList.list.remove" action="deletePatternOrder">
                <binding variable="patternOrder"/>
            </rowAction>
        </table>
    </view>
</ui>