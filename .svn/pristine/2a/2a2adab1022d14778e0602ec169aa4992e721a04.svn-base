<?xml version="1.0" encoding="UTF-8"?>
<ui xmlns="http://uiprogram.mezzanine.com/View" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://uiprogram.mezzanine.com/View ../../xsd/View.xsd">
    <view label="content_filter.title" unit="ContentFilter" init="init">

        <navigation outcome="nav_content_viewer" target="ContentViewer" />

        <menuitem label="content_filter.title" icon="ContentFilter" order="9">
            <userRole>ProgramManager</userRole>
        </menuitem>

        <select label="topic">
            <binding variable="topic"/>
            <collectionSource variable="topics">
                <displayAttribute name="umbrellaID"/>
            </collectionSource>
        </select>

        <select label="sub_topic">
            <binding variable="subTopic"/>
           <collectionSource variable="subTopics">
                <displayAttribute name="topicID"/>
            </collectionSource>
        </select>

        <select label="sequence">
            <binding variable="sequence"/>
            <collectionSource variable="sequences">
                <displayAttribute name="sequenceID"/>
            </collectionSource>
        </select>

        <select label="activity">
            <binding variable="activity"/>
            <collectionSource variable="activities">
                <displayAttribute name="patternID"/>
            </collectionSource>
        </select>

        <select label="message">
            <binding variable="o_message"/>
            <collectionSource variable="messages">
                <displayAttribute name="_MTID"/>
            </collectionSource>
        </select>

        <submit label="content_filter.button.filter_drop_downs" action="filterDropDowns"/>
        <submit label="content_filter.button.unfilter_drop_downs" action="resetVars"/>
        <submit label="content_filter.button.view_results" action="viewResults"/>

    </view>
</ui>