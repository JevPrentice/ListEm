<?xml version="1.0" encoding="UTF-8"?>
<ui xmlns="http://uiprogram.mezzanine.com/View" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://uiprogram.mezzanine.com/View ../../xsd/View.xsd">
    <view label="activity_edit.title" unit="ActivityEdit" init="init">

        <navigation outcome="nav_activity_order_management" target="ActivityOrderManagement"/>
        <navigation outcome="nav_activity_management" target="ActivityManagement"/>
        <navigation outcome="nav_content_viewer" target="ContentViewer"/>
        <navigation outcome="nav_activity_type_edit" target="ActivityEditSmsType"/>
        <navigation outcome="nav_activity_order_edit" target="ActivityOrderEdit"/>
        <navigation outcome="nav_activity_ivr_details" target="ActivityEditIvrDetails"/>

        <action label="back" action="navigate"/>

        <textfield label="activity.activityID_required">
            <binding variable="activityID">
                <!-- <attribute name="patternID"/> -->
            </binding>
        </textfield>
        <textfield label="activity.activityStartSMS">
            <binding variable="activity">
                <attribute name="patternStartSMS"/>
            </binding>
        </textfield>
        <textfield label="activity.activityEndSMS">
            <binding variable="activity">
                <attribute name="patternEndSMS"/>
            </binding>
        </textfield>
        <textfield label="activity.activityReminderSMS">
            <binding variable="activity">
                <attribute name="patternReminderSMS"/>
            </binding>
        </textfield>
        <textfield label="activity.activityReminderTime">
            <binding variable="activity">
                <attribute name="patternReminderTime"/>
            </binding>
        </textfield>
        <select label="activity.activityChannelID_required">
            <binding variable="uChannelKeyObject"/>
            <collectionSource function="ChannelKeyObjectController:getAllChannelKeyObject">
                <displayAttribute name="patternChannelID"/>
                <displayAttribute name="patternChannelDescription"/>
            </collectionSource>
        </select>
        
        <submit label="save" action="saveActivity"/>
    </view>
</ui>