unit PatternOrderList;

PatternOrder patternOrder;

Pattern pattern;
Sequence sequence;

void init() {
	patternOrder = PatternOrder:new();
}

string editPatternOrder() {
    pattern = patternOrder.pattern_patternOrder ;
    sequence = patternOrder.sequence_patternOrder;
	return null;
}

string savePatternOrder() {
	patternOrder.pattern_patternOrder = pattern;
	patternOrder.sequence_patternOrder = sequence;
	patternOrder.save();
	init();
	return null;
}

string deletePatternOrder() {
	PatternOrder:delete(patternOrder);
	return null;
}

PatternOrder[] getAllPatternOrders() {
	return PatternOrder:all();
}