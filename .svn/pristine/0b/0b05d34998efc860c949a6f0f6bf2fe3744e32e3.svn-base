<?xml version="1.0" encoding="UTF-8"?>
<ui xmlns="http://uiprogram.mezzanine.com/View" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://uiprogram.mezzanine.com/View ../../xsd/View.xsd">
    
    <view label="ivrmappingtable.pagetitle" unit="IVRMappingTable" init="init">
        
        <navigation outcome="back" target="SystemOverview" />
        <action label="back" outcome="back"/>
    
        <select label="ivrmappingtable.pattern">
			<binding variable="imtp"/>
			<collectionSource function="fGetIVRPatterns">
				<displayAttribute name="patternID"/>
			</collectionSource>
		</select>    
        <select label="ivrmappingtable.channelkey">
			<binding variable="imtck"/>
			<collectionSource function="ChannelKeyObjectController:getAllChannelKeyObject">
    			<displayAttribute name="patternChannelID"/>
				<displayAttribute name="patternChannelDescription"/>
            </collectionSource>
		</select>
        <textfield label="client.language">
            <binding variable="imt">
                <attribute name="languageid"/>
            </binding>
        </textfield>
        <textfield label="ivrmappingtable.ivractivityid">
            <binding variable="imt">
                <attribute name="ivractivityid"/>
            </binding>
        </textfield>
        
        <submit label="ivrmappingtable.ivractivity" action="saveIVRMappingTable"/>
        <submit label="ivrmappingtable.build" action="buildIVRMappingTableClick"/>

        <table title="ivrmappingtable.ivractivitylist">
            <collectionSource function="getIVRMappingTable"/>
        
            <column heading="ivrmappingtable.pattern">
                <attributeName>ivrmappingtable_pattern.patternID</attributeName>
            </column>
            <column heading="ivrmappingtable.channelkey">
                <attributeName>ivrmappingtable_channelkey.patternChannelDescription</attributeName>
            </column>
            <column heading="client.language">
                <attributeName>languageid</attributeName>
            </column>
            <column heading="ivrmappingtable.ivractivityid">
                <attributeName>ivractivityid</attributeName>
            </column>
            
            <rowAction label="edit" action="editIVRMappingTable">
                <binding variable="imt"/>
            </rowAction>

            <rowAction label="delete" action="removeIVRMappingTable">
                <binding variable="imt"/>
            </rowAction>
            
        </table>
        
        <table title="ScheduleURL.fGetAllScheduleURL">
            <collectionSource function="uMonitoring:fGetAllScheduleURLFullList"/>
            <column heading="ScheduleURL.dateTimeStampInserted">
                <attributeName>dateTimeStampInserted</attributeName>
            </column>            
            <column heading="ScheduleURL.url">
                <attributeName>url</attributeName>
            </column>            
            <column heading="ScheduleURL.dateTimeStampUsed">
                <attributeName>dateTimeStampUsed</attributeName>
            </column>            
            <column heading="ScheduleURL.status">
                <attributeName>status</attributeName>
            </column>            
        </table>
        
    </view>
</ui>