<?xml version="1.0" encoding="UTF-8"?>
<ui xmlns="http://uiprogram.mezzanine.com/View" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://uiprogram.mezzanine.com/View ../../xsd/View.xsd">
    <view init="init" label="activity_type_edit.title" unit="ActivityEditSmsType">

        <navigation outcome="nav_activity_order_management" target="ActivityOrderManagement"/>
        <navigation outcome="nav_activity_management" target="ActivityManagement"/>
        <navigation outcome="nav_content_viewer" target="ContentViewer"/>
        <navigation outcome="nav_activity_edit" target="ActivityEdit"/>
        <navigation outcome="nav_activity_order_edit" target="ActivityOrderEdit"/>

        <info label="activity">
            <binding variable="activity">
                <attribute name="patternID" />
            </binding>
        </info>
        
       <select label="activity.activityType">
            <binding variable="patternType"/>
            <collectionSource function="ActivityTypeController:getAllActivityTypes">
                <displayAttribute name="patternTypeID"/>
            </collectionSource>
        </select>

        <textfield label="patternType.randomPatternMax">
            <binding variable="patternTypeTable">
                <attribute name="randomPatternMax"/>
            </binding>
        </textfield>

        <submit label="activity_type_edit.save" action="saveActivityType"/>
        <submit label="activity_type_edit.save_activity_nav_activity_order" action="saveActivityTypeNavActivityOrderEdit"/>

    </view>
</ui>