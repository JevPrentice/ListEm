<?xml version="1.0" encoding="UTF-8"?>
<ui xmlns="http://uiprogram.mezzanine.com/View" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://uiprogram.mezzanine.com/View ../../xsd/View.xsd">
    <view label="message_order_edit.title" unit="MessageOrderEdit" init="init">
        
        <navigation outcome="nav_message_order_management" target="MessageOrderManagement" />
        <navigation outcome="nav_content_viewer" target="ContentViewer"/>
        <navigation outcome="nav_message_edit" target="MessageEdit" />

        <action label="back" action="back"/>
     
		<select label="message_order_management.activityID">
			<binding variable="activity"/>
			<collectionSource function="ActivityController:getAllActivities">
				<displayAttribute name="patternID"/>
			</collectionSource>
		</select>
        
       <select label="message_order_management.messageID">
       		<binding variable="o_message"/>
           <collectionSource function="MessageController:getAllMessages">
				<displayAttribute name="_MTID"/>
			</collectionSource>
        </select>

 		<textfield label="message_order_management.messageOrder">
            <binding variable="orderNumber">
                <!-- <attribute name="_MTID_order"/> -->
            </binding>
        </textfield>

        <submit label="message_order_edit.save" action="saveMessageOrderButton"/>
        <submit label="message_order_edit.save_and_create_another" action="saveMessageOrderAndCreateAnotherButton"/>

    </view>
</ui>