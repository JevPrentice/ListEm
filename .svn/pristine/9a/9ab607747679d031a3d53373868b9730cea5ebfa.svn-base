unit LearningManagerEdit;

LearningManager learningManager;

bool isEdit;

string message;

string nav_return;

void init(){
	message = "";

	if(learningManager == null){
        learningManager = LearningManager:new();
        isEdit = false;
    } else {
        isEdit = true;
    }

}

string submitInvite(){
    learningManager.role_id = 1;
    learningManager.registered = Mez:now();
    learningManager.save();

    if (isEdit == false){
    	learningManager.invite(learningManager.mobileNumber);	
    }

	message = "Learning Manager saved";
    Alerter:alert(message);
    
    nav_return = "nav_learning_manager_management";
	return navigate();
}

string backButton(){
	nav_return = "nav_learning_manager_management";
	return navigate();
}

string navigate(){
	resetVars();
	return nav_return;
}

void resetVars(){
	learningManager = null;
}