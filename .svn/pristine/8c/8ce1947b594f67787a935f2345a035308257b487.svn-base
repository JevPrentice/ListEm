<?xml version="1.0" encoding="UTF-8"?>
<ui xmlns="http://uiprogram.mezzanine.com/View" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://uiprogram.mezzanine.com/View ../../xsd/View.xsd">
    <view label="fixed_message_management.title" unit="FixMessageList" init="init">

        <navigation outcome="back" target="SystemOverview" />
        <action label="back" outcome="back"/>
    
        <textfield label="fixMessage.language">
            <binding variable="uFixMessage">
                <attribute name="languageID"/>
            </binding>
        </textfield>
        
        <textfield label="fixMessage.fixedMessageID">
            <binding variable="uFixMessage">
                <attribute name="fixedMessageID"/>
            </binding>
        </textfield>

        <textarea label="fixMessage.fixedMessageText">
            <binding variable="uFixMessage">
                <attribute name="fixedMessageText"/>
            </binding>
        </textarea>

        <submit label="submit" action="submit"/>
        <button label="fixMessage.buildFixMessages" action="BLUnits_RunOnce:buildAllStaticSetup"/>
        <table title="fixMessage.list.title">
            <collectionSource function="FixMessageController:getAllFixMessages"/>
            
             <column heading="fixMessage.language">
                <attributeName>languageID</attributeName>
            </column>
            
            <column heading="fixMessage.fixedMessageID">
                <attributeName>fixedMessageID</attributeName>
            </column>

            <column heading="fixMessage.fixedMessageText">
                <attributeName>fixedMessageText</attributeName>
            </column>
            <rowAction label="edit" action="edit">
                <binding variable="uFixMessage"/>
            </rowAction>
        </table>
        
    </view>
</ui>