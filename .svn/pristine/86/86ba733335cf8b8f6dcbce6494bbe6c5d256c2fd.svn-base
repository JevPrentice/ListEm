<?xml version="1.0" encoding="UTF-8"?>
<ui xmlns="http://uiprogram.mezzanine.com/View" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://uiprogram.mezzanine.com/View ../../xsd/View.xsd">
    <view label="sequence_order_management.title" unit="SequenceOrderManagement" init="init">
    
        <navigation outcome="nav_create_sequence" target="SequenceManagement" />
        <navigation outcome="nav_sequence_order_edit" target="SequenceOrderEdit" /> 
        <navigation outcome="nav_sequence_edit" target="SequenceEdit" /> 
        <navigation outcome="nav_manage_subtopics" target="SubTopicManagement" />
        <navigation outcome="nav_subtopic_order_management" target="SubTopicOrderManagement" />
        <navigation outcome="nav_activity_edit" target="ActivityEdit" />
        <navigation outcome="nav_activity_orders" target="ActivityOrderManagement" />
        <navigation outcome="nav_sequence_order_management" target="SequenceOrderManagement" />

        <menuitem label="sequence_order_management.title" icon="SequenceOrder" order="12">
            <userRole>ProgramManager</userRole>
        </menuitem>
        
        <action label="subtopic_order_management.nav_manage_subtopics" action="nav_manage_subtopics"/>
        <action label="sequence_order_management.manage_sequences" action="manageSequences"/>
        <action label="sequence_order_management.create_link" action="createSequenceOrder"/>

        <info label="sequence_order_management.sub_topic_filter">
            <binding variable="subTopicFilter">
                <attribute name="topicID"/>
            </binding>
        </info>
        
        <info label="sequence_order_management.sequence_filter">
            <binding variable="sequenceFilter">
                <attribute name="sequenceID"/>
            </binding>
        </info>

        <table title="sequence_order_management.table.title">
            <collectionSource variable="sequenceOrders"/>
            <column heading="sequence.sequenceID">
                <attributeName>sequence_sequenceOrder.sequenceID</attributeName>
            </column>
         	<column heading="sub_topic.subTopicID">
                <attributeName>topic_sequenceOrder.topicID</attributeName>
            </column>
			<column heading="sequenceOrder.sequenceOrder">
                <attributeName>sequenceOrder</attributeName>
            </column>
            <rowAction label="sequence_order_management.view_subtopic_orders" action="viewSubTopicOrders">
                <binding variable="sequenceOrder"/>
            </rowAction>
            <rowAction label="sequence_order_management.edit_sequence" action="editSequence">
                <binding variable="sequenceOrder"/>
            </rowAction>
            <rowAction label="sequence_order_management.edit_sequence_order" action="editSequenceOrder">
                <binding variable="sequenceOrder"/>
            </rowAction>
            <rowAction label="sequence_order_management.delete" action="deleteSequenceOrder">
                <binding variable="sequenceOrder"/>
            </rowAction>
            <rowAction label="sequence_order_management.create_activity" action="createActivity">
                <binding variable="sequenceOrder"/>
            </rowAction>
            <rowAction label="sequence_order_management.view_activity_orders" action="viewActivityOrders">
                <binding variable="sequenceOrder"/>
            </rowAction>
        </table>

        <submit label="remove_filter" action="removeFiltersButton"/>

    </view>
</ui>