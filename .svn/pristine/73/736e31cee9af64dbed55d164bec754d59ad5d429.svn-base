<?xml version="1.0" encoding="UTF-8"?>
<ui xmlns="http://uiprogram.mezzanine.com/View" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://uiprogram.mezzanine.com/View ../../xsd/View.xsd">
    <view label="sequence_order.add_edit.title" unit="SequenceOrderEdit" init="init">
        
        <navigation outcome="nav_sequence_order_management" target="SequenceOrderManagement" />
        <navigation outcome="nav_content_viewer" target="ContentViewer"/>

        <action label="back" action="navigate"/>

        <select label="sequence_order.add_edit.topic">
            <binding variable="subTopic"/>
            <collectionSource function="SubTopicController:getAllSubTopics">
                <displayAttribute name="topicID"/>
            </collectionSource>
        </select>

        <select label="sequence_order.add_edit.sequence">
            <binding variable="sequence"/>
            <collectionSource function="SequenceController:getAllSequences">
                <displayAttribute name="sequenceID"/>
            </collectionSource>
        </select>

        <textfield label="sequence_order.sequenceOrder">
            <binding variable="orderNumber" />
        </textfield>
        
        <submit label="save" action="saveSequenceOrder"/>

    </view>
</ui>