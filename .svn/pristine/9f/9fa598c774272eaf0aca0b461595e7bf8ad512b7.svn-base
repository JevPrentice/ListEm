<?xml version="1.0" encoding="UTF-8"?>
<ui xmlns="http://uiprogram.mezzanine.com/View" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://uiprogram.mezzanine.com/View ../../xsd/View.xsd">
    <view label="program_manager_management.title" unit="ProgramManagerManagement" init="init">

        <navigation outcome="back" target="SystemOverview" />
        <navigation outcome="nav_edit_program_manager" target="ProgramManagerEdit" />

        <action label="back" outcome="back"/>
        <action label="program_manager_management.invite" outcome="nav_edit_program_manager"/>

        <table title="program_manager_management.table">
            <collectionSource function="getAllProgramManagers"/>
            <column heading="firstNames">
                <attributeName>firstNames</attributeName>
            </column>
            <column heading="surname">
                <attributeName>surname</attributeName>
            </column>
            <column heading="mobileNumber">
                <attributeName>mobileNumber</attributeName>
            </column>
            <column heading="first.registered">
                <attributeName>registered</attributeName>
            </column>
            <rowAction label="edit" action="editProgramManager">
                <binding variable="programManager"/>
            </rowAction>
        </table>
    </view>
</ui>