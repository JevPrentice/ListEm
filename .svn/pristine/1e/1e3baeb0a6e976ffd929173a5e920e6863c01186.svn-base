<?xml version="1.0" encoding="UTF-8"?>
<ui xmlns="http://uiprogram.mezzanine.com/View" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://uiprogram.mezzanine.com/View ../views/xsd/View.xsd">

    <view label="admins" unit="RoleManagement">

        <menuitem label="admins" icon="UserManagement" order="1">
            <userRole>Admin</userRole>
        </menuitem>

        <navigation outcome="invite" target="InviteAdmin"/>
        <navigation outcome="edit" target="EditAdmin"/>
        <action label="invite.admin" action="initInviteAdmin"/>


        <!-- TEST -->
        <action label="test" action="testTimer"/>

        <table>
            <collectionSource function="getSA"/>
       
            <column heading="firstNames">
                <attributeName>firstNames</attributeName>
            </column> 
                      
            <column heading="surname">
                <attributeName>surname</attributeName>
            </column> 
                      
            <column heading="mobileNumber">
                <attributeName>mobileNumber</attributeName>
            </column> 
                
            <rowAction label="edit" action="edit">
                <binding variable="a"/>
            </rowAction>
                
            <rowAction label="remove" action="uninviteSA">
                <binding variable="a"/>
                <confirm subject="confirm.uninviteSA" body="confirm.uninviteBody"/>
            </rowAction>
        </table>
    </view>
</ui>