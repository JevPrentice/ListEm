<?xml version="1.0" encoding="UTF-8"?>
<ui xmlns="http://uiprogram.mezzanine.com/View" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://uiprogram.mezzanine.com/View ../../xsd/View.xsd">
    <view label="learningManager.sequenceList.title" unit="SequenceList" init="init">
    
        <!--<menuitem label="learningManager.sequenceList.menu" icon="Users" order="31">
            <userRole>LearningManager</userRole>
        </menuitem>-->
        
        <navigation outcome="back" target="SystemOverview" />
        <action label="back" outcome="back"/>
        
         <textfield label="sequence.sequenceID">
            <binding variable="sequence">
                <attribute name="sequenceID"/>
            </binding>
        </textfield>

        <textfield label="sequence.sequenceName">
            <binding variable="sequence">
                <attribute name="sequenceName"/>
            </binding>
        </textfield>

        <textfield label="sequence.sequenceStartSMS">
            <binding variable="sequence">
                <attribute name="sequenceStartSMS"/>
            </binding>
        </textfield>
        
        <textfield label="sequence.sequenceEndSMS">
            <binding variable="sequence">
                <attribute name="sequenceEndSMS"/>
            </binding>
        </textfield>
        <textfield label="sequence.sequenceReminderSMS">
            <binding variable="sequence">
                <attribute name="sequenceReminderSMS"/>
            </binding>
        </textfield>
        <textfield label="sequence.sequenceReminderTime">
            <binding variable="sequence">
                <attribute name="sequenceReminderTime"/>
            </binding>
        </textfield>
       
		
		<submit label="submit" action="saveSequence"/>

        <table title="learningManager.sequenceList.list">
            <collectionSource function="getAllSequences"/>
            <column heading="sequence.sequenceID">
                <attributeName>sequenceID</attributeName>
            </column>
         	<column heading="sequence.sequenceName">
                <attributeName>sequenceName</attributeName>
            </column>
            <column heading="sequence.sequenceStartSMS">
                <attributeName>sequenceStartSMS</attributeName>
            </column> 
			<column heading="sequence.sequenceEndSMS">
                <attributeName>sequenceEndSMS</attributeName>
            </column>
            <column heading="sequence.sequenceReminderSMS">
                <attributeName>sequenceReminderSMS</attributeName>
            </column> 
             <column heading="sequence.sequenceReminderTime">
                <attributeName>sequenceReminderTime</attributeName>
            </column> 
           <!-- <column heading="sequence._id">
                <attributeName>_id</attributeName>
            </column> -->
            <rowAction label="learningManager.sequenceList.list.edit" action="editSequence">
                <binding variable="sequence"/>
            </rowAction>
            <rowAction label="learningManager.sequenceList.list.remove" action="deleteSequence">
                <binding variable="sequence"/>
            </rowAction>
        </table>
    </view>
</ui>