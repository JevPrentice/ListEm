<?xml version="1.0" encoding="UTF-8"?>
<ui xmlns="http://uiprogram.mezzanine.com/View" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://uiprogram.mezzanine.com/View ../../xsd/View.xsd">
    <view label="subtopic_order_management.edit_create.title" unit="SubTopicOrderEdit" init="init">

        <navigation outcome="nav_topic_link_subtopic_management" target="SubTopicOrderManagement"/>
        <navigation outcome="nav_content_viewer" target="ContentViewer"/>

        <action label="back" action="navigate"/>

        <select label="topic.topicID">
            <binding variable="topic"/>
            <collectionSource function="TopicController:getAllTopics">
                <displayAttribute name="umbrellaID"/>
            </collectionSource>
        </select>

        <select label="sub_topic.subTopicID">
            <binding variable="subTopic"/>
            <collectionSource function="SubTopicController:getAllSubTopics">
                <displayAttribute name="topicID"/>
            </collectionSource>
        </select>

        <textfield label="sub_topic_order.subTopicOrderNum">
            <binding variable="orderNumber" />
        </textfield> 

        <datefield label="sub_topic_order.fixeddate">
            <binding variable="subTopicOrder">
                <attribute name="fixeddate"/>
            </binding>
        </datefield>

        <textfield label="sub_topic_order.relativestartnum">
            <binding variable="subTopicOrder">
                <attribute name="relativestartnum"/>
            </binding>
        </textfield>

        <textfield label="sub_topic_order.dowstartnum">
            <binding variable="subTopicOrder">
                <attribute name="dowstartnum"/>
            </binding>
        </textfield>
 
        <submit label="save" action="saveLink"/>        

    </view>
</ui>