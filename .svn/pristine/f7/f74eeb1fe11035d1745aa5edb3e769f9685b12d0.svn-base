string getConfigValueForDesc(string desc){
	ConfigTable[] configs = ConfigTable:equals(sConfigDescription, desc);

	if (configs.length() <= 0){
		return null;
	}

	ConfigTable config = configs.get(0);

	return config.sConfigValue;
}

int getConfigIntForDesc(string desc){
	ConfigTable[] configs = ConfigTable:equals(sConfigDescription, desc);

	if (configs.length() <= 0){
		return -1;
	}

	ConfigTable config = configs.get(0);

	return config.iConfigValue;
}