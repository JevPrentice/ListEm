@Restrict("SmartChew", all())
@Restrict("FieldWorker", all()) /*NY: added 2014/08/11 */
persistent object Topic {
	@RequiredAttribute("clientGroup.requirefield")
	string topicID;
	@RequiredAttribute("clientGroup.requirefield")
	string topicName;
	string topicStartSMS;
	string topicEndSMS;
	string topicReminderSMS;
    @RequiredAttribute("clientGroup.requirefield")
	int topicReminderTime;
    @RequiredAttribute("clientGroup.requirefield")
	int topicEscalationTime;
	@RequiredAttribute("clientGroup.requirefield")
	int topicMaxDuration;

	//Added by JV for IVR language correction and topic mapping
	int topicType;
	string topicFlags;
	@ManyToOne
	LanguageKeyObject topic_LanguageKey;

}
